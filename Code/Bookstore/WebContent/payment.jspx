<?xml version="1.0" encoding="ISO-8859-1" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0">
	<jsp:directive.page contentType="text/html; charset=ISO-8859-1"
		pageEncoding="ISO-8859-1" session="false" />
	<jsp:output doctype-root-element="html"
		doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
		doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"
		omit-xml-declaration="true" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<script type="text/javascript"
	src="${pageContext.request.contextPath}/res/payment.js" defer='defer'>
	;
</script>
<title>Log in or Register</title>
</head>
<body>
	<main>
		<div id="mainDisplay">
			<section>
				<h4>Billing Info</h4>
				<p>Name:</p>
				<p>Address:</p>
				<p>Province:</p>
				<p>Country:</p>
				<p>Zip/Postal Code:</p>

			</section>
			<section>
				<h4>Shipping Info</h4>
				<p>Name:</p>
				<p>Phone Number:</p>
				<p>Address:</p>
				<p>Province:</p>
				<p>Country:</p>
				<p>Zip/Postal Code:</p>

				<h4>Billing Info</h4>
				<form method="POST">
				<label for = "cardNum">Card Number:</label>
				<input type="text" name="cardNum" id="cardNum" maxlength = "16"></input><br />
				<label for = "CVV">CVV:</label>
				<input type="text" name="CVV" id="CVV" maxlength = "4"></input><br />
				<label for = "expiration">Expiration Date:</label>
				<input type="month" name="expiration" id="expiration"></input><br />
				</form> 
			</section>
			<button onClick="confirmOrder()">Confirm Order</button>
			<button>Change Info</button>
		</div>
	</main>
</body>
	</html>
</jsp:root>